<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="net.virux.mangapp.model.Title" table="map_title">
		<id column="id_title" name="idTitle" type="integer">
			<generator class="increment"/>
		</id>
		<property name="idEditorial" column="id_editorial" type="integer"/>
		<property name="titleName" column="title_name" type="string"/>
		<property name="titleCover" column="title_cover" type="string"/>
		<property name="totalVolumes" column="title_total_volumes" type="integer"/>
		<property name="volumesPublishedJp" column="title_volumes_published_jp" type="integer"/>
		<property name="volumesPublishedMx" column="title_volumes_published_mx" type="integer"/>
		<property name="statusJp" column="title_status_jp" type="string"/>
		<property name="statusMx" column="title_status_mx" type="string"/>
		<property name="jpLaunch" column="title_jp_launch" type="java.util.Date"/>
		<property name="mxLaunch" column="title_mx_launch" type="java.util.Date"/>
		
		<!-- RELATIONSHIP MANY-TO-MANY [TABLE: map_user_x_title]-->
		<set name="users" table="map_user_x_title" inverse="true" lazy="true" 
				fetch="select" cascade="all">
			<key>
				<column name="id_title" not-null="true"/>
			</key>
			<many-to-many entity-name="net.virux.mangapp.model.User">
				<column name="id_user" not-null="true"/>
			</many-to-many>
		</set>
		
		<!-- RELATIONSHIP MANY-TO-MANY [TABLE: map_author_x_title]-->
		<set name="authors" table="map_user_x_title" inverse="false" lazy="true" 
				fetch="select" cascade="all">
			<key>
				<column name="id_title" not-null="true"/>
			</key>
			<many-to-many entity-name="net.virux.mangapp.model.Author">
				<column name="id_author" not-null="true"/>
			</many-to-many>
		</set>
		
	</class>
</hibernate-mapping>