<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="net.virux.mangapp.model.User" table="map_user">
		<id column="id_user" name="idUser" type="integer">
			<generator class="assigned"/>
		</id>
		<property name="username" column="user_username" type="string"/>
		<property name="password" column="user_password" type="string"/>
		<property name="email" column="user_email" type="string"/>
		<property name="avatar" column="user_avatar" type="string"/>
		<property name="cover" column="user_cover" type="string"/>
		<property name="bio" column="user_bio" type="string"/>
		<property name="signUpDate" column="user_signup_date" type="java.util.Date"/>
		<property name="ipAddress" column="user_ip_address" type="string"/>
		<property name="state" column="user_state" type="string"/>
		
		<!-- RELATIONSHIP MANY-TO-MANY [TABLE: map_user_x_profile]-->
		<set name="profiles" table="map_user_x_profile" inverse="true" lazy="true" 
				fetch="select" cascade="all">
			<key>
				<column name="id_user" not-null="true"/>
			</key>
			<many-to-many entity-name="net.virux.mangapp.model.Profile">
				<column name="id_profile" not-null="true"/>
			</many-to-many>
		</set>
		
		<!-- RELATIONSHIP MANY-TO-MANY [TABLE: map_user_x_title]-->
		<set name="titles" table="map_user_x_title" inverse="false" lazy="true" 
				fetch="select" cascade="all">
			<key>
				<column name="id_user" not-null="true"/>
			</key>
			<many-to-many entity-name="net.virux.mangapp.model.Title">
				<column name="id_title" not-null="true"/>
			</many-to-many>
		</set>
	</class>
</hibernate-mapping>